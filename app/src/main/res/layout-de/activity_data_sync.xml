                            android:paddingLeft="@dimen/NormalSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_product_list" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvProductList"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_get_price_level" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvPriceLevel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_get_pictures_product" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvPicturesProduct"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_activity_list" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvActivityList"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_bill" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvTransaction"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_get_promotion" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvPromotion"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_get_more_info" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvMoreInfo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="@dimen/NormalSize"
                            android:text="@string/str_get_delivery_order_list" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvDeliveryOrder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


