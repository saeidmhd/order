    <style name="forms_spinner_default" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/forms_spinner_selector</item>
        <item name="android:textColor">@color/forms_spinner_text_color_selector</item>
        <item name="android:spinnerItemStyle">@style/forms_checkbox_default_item</item>
        <item name="android:layout_margin">@dimen/SmallSize</item>
        <item name="android:minHeight">@dimen/spinner_height</item>
        <item name="android:height">@dimen/spinner_height</item>
        <item name="android:paddingRight">@dimen/NormalSize</item>
        <item name="android:paddingLeft">@dimen/VeryLargeSize</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyDialogStyle2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SortDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="forms_checkbox_default_item" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/forms_checkbox_spinner_item</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="forms_checkbox_spinner_item" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/forms_spinner_text_color_selector</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <!-- ******************** nav styles ********************* -->
    <style name="nav_item_default" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/nav_item_selector</item>
        <item name="android:paddingRight">@dimen/LargeSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/NormalSize</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Setting a divider is entirely optional -->
        <item name="nnf_list_item_divider">?android:attr/listDivider</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>