<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/report_item_min_height"
            android:background="@color/forms_alter_row"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/NormalSize">

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/sample_customer"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/forms_seprator_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/NormalSize">

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_count_h"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_final_sum_h"
                android:textColor="@color/black" />


            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_tax_charge_h"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_net_sale_h"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_discount_h"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_sale_h"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/forms_seprator_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/report_item_min_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/NormalSize"
            android:paddingRight="@dimen/NormalSize">

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvCount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvFinalSum"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvTaxCharge"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvNetSale"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvDiscount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvSale"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/forms_seprator_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/report_item_min_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/NormalSize"
            android:paddingRight="@dimen/NormalSize">


            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvMissionStatus"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_cash_receipt"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvNumberOfCheckLists"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_cheque_amount"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/forms_seprator_line" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvCashReceiptAmount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sample_number"
                android:textColor="@color/black" />

            <com.mahak.order.widget.FontTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_cash_amount"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/forms_seprator_line" />
    </LinearLayout>
</LinearLayout>
