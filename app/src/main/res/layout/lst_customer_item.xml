<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ui_bg_selector"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:orientation="vertical"
                android:padding="@dimen/SmallSize">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvRemained"
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="@string/sample_price" />

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvMarketName"
                        style="@style/forms_label_default"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/shop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvCustomerStatus"
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:text="@string/debtor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/person_code"
                            style="@style/forms_label_default"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:layout_marginRight="@dimen/SmallSize"
                            android:text="(23)" />

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/tvCustomerName"
                            style="@style/forms_label_default"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="@string/person_name" />



                    </LinearLayout>


                </LinearLayout>

                <com.mahak.order.widget.FontTextView
                    android:id="@+id/tvAddress"
                    style="@style/forms_sub_label_default"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/address" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnmenu"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/forms_btn_menu_selector" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>