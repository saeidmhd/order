    <!-- **************** Forms Style ********************* -->
    <style name="forms_btn_default" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/forms_btn_selector</item>
        <item name="android:textColor">@color/forms_btn_text_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/SmallSize</item>
    </style>

    <style name="forms_btn" parent="@android:style/Widget.Button">
