        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@null</item>
    </style>

    <style name="forms_checkbox_default2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:drawableRight">@drawable/forms_checkbox_selector</item>
        <item name="android:textColor">@color/forms_label_default</item>
        <item name="android:textSize">13sp</item>
