<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/ThinSize">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/report_item_min_height"
        android:background="@drawable/card_ui_bg_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/SmallSize">

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvDate"
                style="@style/forms_label_default"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/date" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvNumber"
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/NormalSize"
                android:gravity="right"
                android:text="@string/sample_number" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvChequeType"
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="چک شماره:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/forms_alter_row"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/SmallSize">

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvBank"
                style="@style/forms_label_default"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/bank" />

            <com.mahak.order.widget.FontTextView
                android:id="@+id/txtAmount"
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/NormalSize"
                android:gravity="right"
                android:text="@string/sample_number" />

            <com.mahak.order.widget.FontTextView
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/str_amount" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/SmallSize">

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvDescription"
                style="@style/forms_label_default"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="11sp"
                android:gravity="center_vertical|right" />

            <com.mahak.order.widget.FontTextView
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:text="@string/str_description" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>