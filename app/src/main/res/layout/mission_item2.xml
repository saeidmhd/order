<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:orientation="vertical"
        android:gravity="right"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@color/white">

            <com.mahak.order.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/baac2"
                android:text="(هایپر مارکت رز)"/>

            <com.mahak.order.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="هایپر مارکت رز"/>

            <com.mahak.order.widget.FontTextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center|top"
                android:text="۲"
                android:background="@color/baac">
            </com.mahak.order.widget.FontTextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:background="@color/white">

            <com.mahak.order.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/baac2"
                android:text="میدان دبستان ، نبش ضریح آفتاب ، کوچه دوم"/>

            <com.mahak.order.widget.FontTextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center|top">
            </com.mahak.order.widget.FontTextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="right|top"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:background="@color/white">

            <com.mahak.order.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/baac2"
                android:text="پیش فاکتور"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_getgoods_ico"/>

            <com.mahak.order.widget.FontTextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center|top">
            </com.mahak.order.widget.FontTextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:background="@color/white">

                <com.mahak.order.widget.FontButtonView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/forms_btn_default"
                    android:text="تعیین وضعیت">
                </com.mahak.order.widget.FontButtonView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>