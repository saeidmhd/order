<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ui_bg_selector"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/SmallSize"
        android:paddingTop="@dimen/SmallSize"
        android:paddingRight="@dimen/SmallSize"
        android:paddingBottom="@dimen/NormalSize"
        android:layout_margin="@dimen/NormalSize">

        <com.mahak.order.widget.FontTextView
            android:id="@+id/tvProductCode"
            style="@style/forms_label_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/SmallSize"
            android:background="@color/forms_alter_row"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/product_code"
            />

        <com.mahak.order.widget.FontTextView
            android:id="@+id/tvName"
            style="@style/forms_label_default"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/SmallSize"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="@string/sample_product" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="@drawable/image_empty_box"
            android:scaleType="fitCenter"
            android:src="@drawable/img_default_product" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/ThinSize"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvUnit"
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/count"
                        />

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvAsset"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left|center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="@string/str_asset"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelAsset2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/forms_alter_row"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize"
                    android:visibility="gone">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvUnit2"
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="marquee"
                        android:gravity="center|right"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/count"
                        />

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvAsset2"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:textSize="10sp"
                        android:text="@string/str_asset2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/forms_alter_row"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvInbox"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="@string/str_inbox"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvPrice"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="@string/str_price" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/forms_alter_row"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvCustomerPrice"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        android:textSize="@dimen/txtSizeNormal" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="@string/str_customer_price" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelTotalAsset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/SmallSize">

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvTotalAsset"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_number"
                        />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="@string/str_total_inventory"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panelCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/SmallSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.mahak.order.widget.FontTextView
                    android:id="@+id/txtCount"
                    style="@style/forms_edittext_default2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sample_number"
                    />
            </LinearLayout>


            <com.mahak.order.widget.FontTextView
                style="@style/forms_label_default"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_count"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panelTotalCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/forms_alter_row"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/SmallSize">

            <!-- <com.mahak.order.libs.NumberPicker -->
            <!-- android:id="@+id/npProduct" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:focusable="false" -->
            <!-- android:focusableInTouchMode="false" -->
            <!-- android:orientation="horizontal" -->
            <!-- android:visibility="gone" /> -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <com.mahak.order.widget.FontTextView
                    android:id="@+id/txtTotalCount"
                    style="@style/forms_edittext_default2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sample_number"
                    />
            </LinearLayout>


            <com.mahak.order.widget.FontTextView
                android:layout_weight="1"
                style="@style/forms_label_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_total_count"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llgift"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/SmallSize"
            android:visibility="gone">

            <!-- <com.mahak.order.widget.FontEditTextView -->
            <!-- android:id="@+id/txtGift" -->
            <!-- style="@style/forms_edittext_default" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_weight="1" -->
            <!-- android:gravity="center" -->
            <!-- android:inputType="number" -->
            <!-- android:maxLength="4" -->
            <!-- android:selectAllOnFocus="true" -->
            <!-- android:singleLine="true" -->
            <!-- android:visibility="gone" /> -->

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <com.mahak.order.widget.FontTextView
                    android:id="@+id/txtTotalGift"
                    style="@style/forms_edittext_default"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sample_number"
                    android:visibility="visible" />
            </LinearLayout>

            <com.mahak.order.widget.FontTextView
                style="@style/forms_label_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_gift"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>