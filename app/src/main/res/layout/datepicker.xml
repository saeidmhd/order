<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/year_container"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.mahak.order.widget.FontButtonView
            android:id="@+id/year_plus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_top" />

        <com.mahak.order.widget.FontEditText
            android:id="@+id/year_display"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_middle"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="15dip" />

        <com.mahak.order.widget.FontButtonView
            android:id="@+id/year_minus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/month_container"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.mahak.order.widget.FontButtonView
            android:id="@+id/month_plus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_top" />

        <com.mahak.order.widget.FontEditText
            android:id="@+id/month_display"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_middle"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="14dip" />


        <com.mahak.order.widget.FontButtonView
            android:id="@+id/month_minus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_container"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.mahak.order.widget.FontButtonView
            android:id="@+id/date_plus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_top" />

        <com.mahak.order.widget.FontEditText
            android:id="@+id/date_display"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_middle"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="15dip" />

        <com.mahak.order.widget.FontButtonView
            android:id="@+id/date_minus"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/img_picker_bottom" />
    </LinearLayout>

</LinearLayout>