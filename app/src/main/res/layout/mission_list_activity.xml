<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <LinearLayout
                android:padding="@dimen/NormalSize"
                android:background="@color/mission_stat_back"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.mahak.order.widget.FontTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:text=" با عرض سلام خدمت شما با عرض سلام خدمت شما با عرض سلام خدمت شمابا عرض سلام خدمت شمابا عرض سلام خدمت شمابا عرض سلام خدمت شمابا عرض سلام خدمت شما"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:backgroundTintMode="multiply"
                        android:indeterminate="false"
                        android:progress="70"
                        android:rotation="233"
                        app:indicatorColor="@color/success_back"
                        app:indicatorSize="220dp"
                        app:trackCornerRadius="20dp"
                        app:trackThickness="8dp"/>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/failProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:backgroundTintMode="multiply"
                        android:indeterminate="false"
                        android:progress="45"
                        android:rotation="233"
                        app:indicatorColor="@color/fail_back2"
                        app:indicatorSize="220dp"
                        app:trackCornerRadius="20dp"
                        app:trackThickness="8dp"/>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/successProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:backgroundTintMode="multiply"
                        android:indeterminate="false"
                        android:progress="35"
                        android:rotation="233"
                        app:indicatorColor="@color/success_back2"
                        app:indicatorSize="220dp"
                        app:trackCornerRadius="20dp"
                        app:trackThickness="8dp"/>


                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="دستور کار"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/progressBar" />

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/missionDetailStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="۲۵/۲۸"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="@+id/textView5"
                        app:layout_constraintStart_toStartOf="@+id/textView5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/unDo"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="۲۰ موفق"/>

                        <View
                            android:id="@+id/view1"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:background="@drawable/oval_corner_green"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/failCount"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="۲۰ موفق"/>

                        <View
                            android:id="@+id/view2"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:background="@drawable/oval_corner_yellow"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.mahak.order.widget.FontTextView
                            android:id="@+id/successCount"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="۲۰ موفق"/>

                        <View
                            android:id="@+id/view3"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:background="@drawable/oval_corner"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="64dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <com.mahak.order.widget.FontTextView
                                android:id="@+id/getDeliverGoodsCountTxT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۱"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_delivergoods_ico" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mahak.order.widget.FontTextView
                                android:id="@+id/getReceiveCountTxT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۱"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_recieve_ico" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mahak.order.widget.FontTextView
                                android:id="@+id/getOrderCountTxT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۱"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_getorder_ico" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mahak.order.widget.FontTextView
                                android:id="@+id/getGoodsCountTxT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۱"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_getgoods_ico" />


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/mission_list" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>