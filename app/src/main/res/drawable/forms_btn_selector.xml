<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/button_corner_raius" />
            <solid android:color="@color/forms_button_highlight_pressed" />
            <!--             <size android:height="@dimen/button_height" /> -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/button_corner_raius" />
            <solid android:color="@color/forms_button_highlight_pressed" />
            <!--             <size android:height="@dimen/button_height" /> -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/button_corner_raius" />
            <solid android:color="@color/forms_button_highlight_disabled" />
            <!--             <size android:height="@dimen/button_height" /> -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/button_corner_raius" />
            <solid android:color="@color/forms_button_highlight_normal" />
            <!--             <size android:height="@dimen/button_height" /> -->
        </shape>
    </item>

</selector>