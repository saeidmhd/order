                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/NormalSize" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
