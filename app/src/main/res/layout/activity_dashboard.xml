<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_light_form_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.5"
            android:visibility="visible">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mahak.order.MapViewActivity" />

            <ImageButton
                android:id="@+id/btnZoomMapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/forms_btn_circle_selector"
                android:src="@drawable/ic_point_selector" />

            <ImageButton
                android:id="@+id/btnShowRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnZoomMapView"
                android:layout_alignParentRight="true"
                android:background="@drawable/forms_btn_circle_selector"
                android:src="@android:drawable/ic_menu_directions" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_bg"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="7dp">


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/btnTrackingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                tools:ignore="TouchTargetSizeCheck" />


            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvTrackingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="center"
                android:text="@string/str_tracking_description" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/NormalSize"
                    android:scaleType="centerInside"
                    app:iiv_color="@color/disabled_content"
                    app:iiv_icon="gmd-assignment" />

                <com.mahak.order.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/str_no_check_list"
                    android:textColor="@color/disabled_content"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/lstCheckList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/default_light_form_bg"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/llReceipt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/VerySmallSize"
                android:layout_marginLeft="@dimen/VeryVerySmallSize"
                android:layout_marginRight="@dimen/VeryVerySmallSize"
                android:layout_marginTop="@dimen/VerySmallSize"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="@dimen/VerySmallSize"
                android:paddingLeft="@dimen/VerySmallSize"
                android:paddingRight="@dimen/VerySmallSize"
                android:paddingTop="@dimen/VerySmallSize">

                <!-- test -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfCashProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:visibility="visible"
                        android:id="@+id/tvSumOfCash"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_cash"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfChequeProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfCheque"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_cheque_amount"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfReceiptsAmountProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfReceiptsAmount"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_receipt_amount"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfReceiptsProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfReceipts"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_receipts"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <!-- end test -->

                <com.mahak.order.widget.FontButtonView
                    android:id="@+id/btnAddNewReceipt"
                    style="@style/forms_btn_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/str_add_new_receipt"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOrder"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/VerySmallSize"
                android:layout_marginLeft="@dimen/VerySmallSize"
                android:layout_marginRight="@dimen/VeryVerySmallSize"
                android:layout_marginTop="@dimen/VerySmallSize"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="@dimen/VerySmallSize"
                android:paddingLeft="@dimen/VerySmallSize"
                android:paddingRight="@dimen/VerySmallSize"
                android:paddingTop="@dimen/VerySmallSize">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfOrdersProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfOrders"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_orders"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfDiscountOrderProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfDiscountOrder"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_discount"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfChargeAndTaxOrderProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfChargeAndTaxOrder"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_charge_tax"
                        android:textSize="@dimen/smaller_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfPureOrderProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfPureOrder"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_pure"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <com.mahak.order.widget.FontButtonView
                    android:id="@+id/btnAddNewOrder"
                    style="@style/forms_btn_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/str_add_new_order"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInvoice"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/VerySmallSize"
                android:layout_marginLeft="@dimen/VeryVerySmallSize"
                android:layout_marginRight="@dimen/VerySmallSize"
                android:layout_marginTop="@dimen/VerySmallSize"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="@dimen/VerySmallSize"
                android:paddingLeft="@dimen/VerySmallSize"
                android:paddingRight="@dimen/VerySmallSize"
                android:paddingTop="@dimen/VerySmallSize">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfInvoicesProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfInvoices"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_invoices"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfDiscountInvoiceProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfDiscountInvoice"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_discount"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfChargeAndTaxInvoiceProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfChargeAndTaxInvoice"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_charge_tax"
                        android:textSize="@dimen/smaller_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/VerySmallSize"
                    android:paddingRight="@dimen/VerySmallSize">

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/tvSumOfPureInvoiceProgressBar"
                        android:layout_width="12dp"
                        android:layout_height="fill_parent"/>

                    <com.mahak.order.widget.FontTextView
                        android:id="@+id/tvSumOfPureInvoice"
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:ellipsize="marquee"
                        android:gravity="center|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/sample_price"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textStyle="bold" />

                    <com.mahak.order.widget.FontTextView
                        style="@style/forms_label_default"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/str_sum_of_pure"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>

                <com.mahak.order.widget.FontButtonView
                    android:id="@+id/btnAddNewInvoice"
                    style="@style/forms_btn_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/str_add_new_invoice"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/left_drawer"
        layout="@layout/dashboard_left_navigation_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>