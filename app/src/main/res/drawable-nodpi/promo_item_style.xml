<?xml version="1.0" encoding="utf-8"?><!-- 有边框 有圆角 背景灰色 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item>
        <shape android:shape="rectangle">
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
            <stroke android:width="1dip" android:color="@color/dark_gray" />
        </shape>
    </item>
</selector>