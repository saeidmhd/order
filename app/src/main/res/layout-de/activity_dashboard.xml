            android:layout_height="0dip"
            android:layout_weight="1"
            android:visibility="visible">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mahak.order.MapViewActivity" />

            <ImageButton
                android:id="@+id/btnZoomMapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/forms_btn_circle_selector"
                android:src="@drawable/ic_point_selector" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_bg"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="7dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/btnTrackingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"/>

            <com.mahak.order.widget.FontTextView
                android:id="@+id/tvTrackingService"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:text="@string/str_tracking_description" />
